@{
}


@{
    ViewBag.Title = "Index";
    Layout = "_LayoutDashBoard";
}

<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.NuevasReservas</h3>
                        <p>Nuevas reservaciones</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar-alt"></i> <!-- Icono más relacionado con reservas -->
                    </div>
                </div>
            </div>

            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.Usuarios</h3>

                        <p>Nuevos Usuarios</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user"></i>
                    </div>
             
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.Platillos</h3>

                        <p>Cantidad de platillos registrados</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-cutlery" aria-hidden="true"></i>
                    </div>
            
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.Restaurantes</h3>

                        <p>Restaurantes disponibles</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-cutlery" aria-hidden="true"></i>
                    </div>
               
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
 
    </div><!-- /.container-fluid -->
</section>

