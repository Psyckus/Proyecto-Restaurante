@model IEnumerable<MVW_Proyecto_Mesas_Comida.Models.Restaurante>
@{
    ViewData["Title"] = "Home Page";

}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">

	<!-- title -->
	<title>Fruitkha</title>

	<!-- favicon -->
	<link rel="shortcut icon" type="image/png" href="assets/img/favicon.png">

	<style>

		.single-product-item .product-image img {
				max-height: 150px; /* Limita la altura máxima de la imagen */
				width: auto;
				object-fit: cover; /* Asegura que las imágenes se ajusten sin distorsión */
				margin-bottom: 15px;
			}

		.single-product-item h3 {
			font-size: 20px;
			margin-bottom: 10px;
		}

		.single-product-item .product-price {
			flex-grow: 1; /* Permite que la descripción ocupe el espacio restante */
			margin-bottom: 15px;
		}
	
	



	</style>

</head>
<body>
	
	<!--PreLoader-->
    <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
    </div>
    <!--PreLoader Ends-->
	





	<!-- hero area -->
	<div class="hero-area hero-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-9 offset-lg-2 text-center">
					<div class="hero-text">
						<div class="hero-text-tablecell">
							<p class="subtitle">Fresh & Organic</p>
							<h1>Delicious Seasonal Fruits</h1>
						@* 	<div class="hero-btns">
								<a href="shop.html" class="boxed-btn">Fruit Collection</a>
								<a href="contact.html" class="bordered-btn">Contact Us</a>
							</div> *@
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end hero area -->

	<!-- product section -->
	<div class="product-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="section-title">	
						<h3><span class="orange-text">Nuestros</span> Restaurantes</h3>
						<p>Seleccione uno de nuestros restaurantes.</p>
					</div>
				</div>
			</div>

			<div class="row">
				@foreach (var restaurante in Model)
				{
					<div class="col-lg-4 col-md-6 text-center">
						<div class="single-product-item">
							<div class="product-image">
								<!-- Imagen dinámica -->
								<a href="single-product.html"><img src="@($"assets/img/restaurantes/res{restaurante.restaurante_id}.jpg")" alt="@restaurante.nombre"></a>
							</div>

							<!-- Nombre del restaurante dinámico -->
							<h3>@restaurante.nombre</h3>

							<!-- Descripción del restaurante con truncado y tooltip -->
							<p class="product-price" data-bs-toggle="tooltip" title="@restaurante.descripcion">
								<span>Descripción:</span>
								@if (restaurante.descripcion.Length > 100)
								{
									<text>@restaurante.descripcion.Substring(0, 50)...</text>
								}
								else
								{
									<text>@restaurante.descripcion</text>
								}
							</p>

							<!-- Mostrar botón "Seleccionar" solo si el token es válido -->
							@if (ViewBag.TokenValido)
							{
								<a href="@Url.Action("Mesas", "Restaurante", new { id = restaurante.restaurante_id })" class="cart-btn">Seleccionar</a>
							}
							else
							{
								<a href="#" class="cart-btn" disabled>No disponible</a>
							}
						</div>
					</div>
				}
				
			</div>


		</div>
	</div>
	<!-- end product section -->



	

	
	<!-- jquery -->
	<script src="assets/js/jquery-1.11.3.min.js"></script>
	<!-- bootstrap -->
	<script src="assets/bootstrap/js/bootstrap.min.js"></script>
	<!-- count down -->
	<script src="assets/js/jquery.countdown.js"></script>
	<!-- isotope -->
	<script src="assets/js/jquery.isotope-3.0.6.min.js"></script>
	<!-- waypoints -->
	<script src="assets/js/waypoints.js"></script>
	<!-- owl carousel -->
	<script src="assets/js/owl.carousel.min.js"></script>
	<!-- magnific popup -->
	<script src="assets/js/jquery.magnific-popup.min.js"></script>
	<!-- mean menu -->
	<script src="assets/js/jquery.meanmenu.min.js"></script>
	<!-- sticker js -->
	<script src="assets/js/sticker.js"></script>
	<!-- main js -->
	<script src="assets/js/main.js"></script>


	@section Scripts {
		<script>
			var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
			var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
				return new bootstrap.Tooltip(tooltipTriggerEl)
			})

		</script>
	}



</body>
</html>
