		<script>


		$(document).ready(function () {
			// Capturar el clic en el enlace "Create account"
			$('a.fw-bold').on('click', function (event) {
				event.preventDefault();

				// Ocultar el modal de iniciar sesión
				$('#modal-form').modal('hide');

				// Mostrar el modal de registrarse
				$('#modal-form-signup').modal('show');
			});

		});
		

		document.getElementById('form-login').addEventListener('submit', function (event) {
			event.preventDefault();


			var formData = new FormData(this);

			fetch(this.action, {
				method: 'POST',
				body: formData
			})
				.then(response => response.json())
				.then(data => {
					if (data.success) {
						Swal.fire({
							icon: 'success',
							title: 'Éxito',
							text: data.message,
							backdrop: false
						}).then(() => {
							// Actualizar el nombre del usuario en el elemento HTML
						
							// Restablecer el reCAPTCHA
							grecaptcha.reset();
							window.location.href = data.redirectUrl;
							localStorage.setItem('userToken', data.token);// Recarga la página

						});
					} else {
						Swal.fire({
							icon: 'error',
							title: 'Error',
							text: data.message,
							backdrop: false
						});
						grecaptcha.reset();
					}
				})
				.catch(error => {
					Swal.fire({
						icon: 'error',
						title: 'Error',
						text: 'Hubo un error al procesar tu solicitud.',
						backdrop: false
					});
					grecaptcha.reset();
				});
		});

	
		document.getElementById('form-signup').addEventListener('submit', function (event) {
			event.preventDefault();

			var formData = new FormData(this);

			fetch(this.action, {
				method: 'POST',
				body: formData
			})
				.then(response => response.json())
				.then(data => {
					Swal.fire({
						icon: data.success ? 'success' : 'error',
						title: data.success ? 'Éxito' : 'Error',
						text: data.message,
						backdrop: false
					}).then(() => {
						if (data.success) {
							window.location.reload(); // Recarga la página
							$('#modal-form-signup').modal('hide');
							$('body').addClass('modal-open');
						}
						grecaptcha.reset();
					});
				})
				.catch(error => {
					Swal.fire({
						icon: 'error',
						title: 'Error',
						text: 'Hubo un error al procesar tu solicitud.',
						backdrop: false
					});
					grecaptcha.reset();
				});
		});



		</script>


	
